      "login_web": {
        "method": "POST",
        "url": "/ad/auth/login",
        "descripcion": "Login para usuarios administrativos",
        "body": {
          "correo": "string (required) - email del usuario",
          "password": "string (required) - contraseña"
        },
        "ejemplo_body": {
          "correo": "admin@condominio.com",
          "password": "admin123"
        },
        "respuesta_exitosa": {
          "codigo": 0,
          "mensaje": "OK",
          "token": "jwt_token_string",
          "usuario_id": 1,
          "perfil": "ADMIN"
